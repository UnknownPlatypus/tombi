{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tombi",
  "description": "**Tombi** (é³¶) is a toolkit for TOML; providing a formatter/linter and language server. See the [GitHub repository](https://github.com/yassun7010/tombi) for more information.",
  "type": "object",
  "properties": {
    "toml-version": {
      "anyOf": [
        {
          "$ref": "#/definitions/TomlVersion"
        },
        {
          "type": "null"
        }
      ]
    },
    "format": {
      "anyOf": [
        {
          "$ref": "#/definitions/FormatOptions"
        },
        {
          "type": "null"
        }
      ]
    },
    "lint": {
      "anyOf": [
        {
          "$ref": "#/definitions/LintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "definitions": {
    "TomlVersion": {
      "description": "TOML version.",
      "oneOf": [
        {
          "description": "TOML v1.0.0",
          "type": "string",
          "enum": [
            "v1.0.0"
          ]
        },
        {
          "description": "TOML v1.1.0-preview",
          "type": "string",
          "enum": [
            "v1.1.0-preview"
          ]
        }
      ]
    },
    "FormatOptions": {
      "type": "object",
      "properties": {
        "line-ending": {
          "description": "The type of line ending.\n\n- `lf`: Line Feed only (`\\n`), common on Linux and macOS as well as inside git repos. - `crlf`: Carriage Return Line Feed (`\\r\\n`), common on Windows.",
          "anyOf": [
            {
              "$ref": "#/definitions/LineEnding"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "LineEnding": {
      "type": "string",
      "enum": [
        "lf",
        "crlf"
      ]
    },
    "LintOptions": {
      "type": "object"
    }
  }
}
