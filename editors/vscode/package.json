{
  "name": "vscode-tombi",
  "displayName": "Tombi",
  "version": "0.0.1",
  "description": "A TOML language support extention backed by Tombi.",
  "author": {
    "name": "yassun7010",
    "email": "yassun7010@outlook.com"
  },
  "license": "MIT",
  "keywords": ["toml"],
  "categories": ["Programming Languages", "Formatters", "Linters", "Snippets"],
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./dist/main",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build-base": "esbuild ./src/main.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node --target=node16",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "package": "vsce package -o tombi.vsix",
    "format": "biome format --write ./",
    "format:check": "biome format ./",
    "lint": "biome lint ./",
    "typecheck": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@vscode/vsce": "^3.1.1",
    "esbuild": "^0.24.0"
  },
  "activationEvents": ["onLanguage:cargoLock"],
  "contributes": {
    "languages": [
      {
        "id": "toml",
        "aliases": ["TOML"],
        "extensions": [".toml"],
        "filenames": ["Cargo.lock", "uv.lock"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "tombi.showServerVersion",
        "title": "Show Language Server Version",
        "category": "tombi"
      }
    ],
    "configuration": {
      "title": "tombi",
      "properties": {
        "tombi.path": {
          "description": "Absolute path to toml-lsp executable.",
          "type": ["string", "null"],
          "scope": "resource",
          "default": null
        }
      }
    }
  }
}
