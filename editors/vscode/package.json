{
  "name": "vscode-tomy",
  "displayName": "Tomy (TOML Toolkit)",
  "version": "0.0.1",
  "description": "A TOML language support extention backed by tomy",
  "author": {
    "name": "yassun7010",
    "email": "yassun7010@outlook.com"
  },
  "license": "MIT",
  "keywords": ["toml"],
  "categories": ["Programming Languages", "Formatters", "Linters", "Snippets"],
  "engines": {
    "vscode": "^1.94.0"
  },
  "main": "./dist/main",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "package": "vsce package -o tomy.vsix",
    "format": "biome format --write ./",
    "format:check": "biome format ./",
    "lint": "biome lint ./",
    "typecheck": "tsc"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@vscode/vsce": "^3.1.1"
  },
  "activationEvents": ["onLanguage:toml", "onLanguage:cargoLock"],
  "contributes": {
    "languages": [
      {
        "id": "toml",
        "aliases": ["TOML"],
        "extensions": [".toml"],
        "filenames": ["Cargo.lock", "uv.lock"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "tomy",
      "properties": {
        "tomy.path": {
          "description": "Absolute path to tomy executable.",
          "type": ["string", "null"],
          "scope": "resource",
          "default": null
        }
      }
    }
  }
}
