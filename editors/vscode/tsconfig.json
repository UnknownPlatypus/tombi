{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2021",
    "outDir": "out",
    "lib": ["ES2021"],
    "sourceMap": true,
    "rootDir": ".",
    "newLine": "lf",
    "exactOptionalPropertyTypes": true
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": ["src", "tests"]
}
